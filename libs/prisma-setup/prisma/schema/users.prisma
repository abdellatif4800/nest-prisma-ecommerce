// --------------------------------------
// User Model
// --------------------------------------

model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  password  String
  isBlocked Boolean? @default(false)
  role      Role     @default(user)
  joinedAt  DateTime @default(now())

  // Relations
  cart   Cart?
  orders Order[]

  @@map("User")
}

enum Role {
  admin
  user
}
