{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack":false,
    "configFile": "webpack.config.js",
    "sourceMap": false,
    "watchAssets": false,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "projects": {
    "admin-api": {
      "type": "application",
      "root": "apps/admin-api",
      "entryFile": "main",
      "sourceRoot": "apps/admin-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin-api/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "categories": {
      "type": "library",
      "root": "libs/categories",
      "entryFile": "index",
      "sourceRoot": "libs/categories/src",
      "compilerOptions": {
        "tsConfigPath": "libs/categories/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "prisma-setup": {
      "type": "library",
      "root": "libs/prisma-setup",
      "entryFile": "index",
      "sourceRoot": "libs/prisma-setup/src",
      "compilerOptions": {
        "tsConfigPath": "libs/prisma-setup/tsconfig.lib.json"
      }
    },
    "products": {
      "type": "library",
      "root": "libs/products",
      "entryFile": "index",
      "sourceRoot": "libs/products/src",
      "compilerOptions": {
        "tsConfigPath": "libs/products/tsconfig.lib.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/api"
}
